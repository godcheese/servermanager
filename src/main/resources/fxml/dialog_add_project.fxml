<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="rootVBox" prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gioov.controller.AddProjectDialogController">
    <children>
        <AnchorPane fx:id="mainAnchorPane" prefHeight="400.0" prefWidth="591.0" VBox.vgrow="ALWAYS">
         <children>

             <Label layoutX="90.0" layoutY="31.0" text="项目名" />
             <TextField fx:id="nameTextField" layoutX="147.0" layoutY="21.0" prefHeight="40.0" prefWidth="338.0" />

             <Label layoutX="75.0" layoutY="79.0" text="部署路径" />
             <TextField fx:id="deployPathTextField" layoutX="147.0" layoutY="68.0" prefHeight="40.0" prefWidth="338.0" />

             <Label layoutX="51.0" layoutY="133.0" text="数据库类型" />
             <ComboBox fx:id="databaseTypeComboBox" layoutX="135.0" layoutY="123.0" prefHeight="40.0" prefWidth="146.0"/>

             <Label layoutX="51.0" layoutY="183.0" text="数据库主机" />
             <TextField fx:id="databaseHostTextField" layoutX="135.0" layoutY="173.0" prefHeight="40.0" prefWidth="146.0" />

             <Label layoutX="300.0" layoutY="189.0" text="数据库端口" />
             <TextField fx:id="databasePortTextField" layoutX="384.0" layoutY="178.0" prefHeight="40.0" prefWidth="146.0" />

             <Label layoutX="309.0" layoutY="135.0" text="数据库名" />
             <TextField fx:id="databaseNameTextField" layoutX="383.0" layoutY="127.0" prefHeight="40.0" prefWidth="146.0" />

             <Label layoutX="35.0" layoutY="245.0" text="数据库用户名" />
             <TextField fx:id="databaseUsernameTextField" layoutX="135.0" layoutY="235.0" prefHeight="40.0" prefWidth="146.0" />

             <Label layoutX="303.0" layoutY="236.0" text="数据库密码" />
             <TextField fx:id="databasePasswordTextField" layoutX="386.0" layoutY="227.0" prefHeight="40.0" prefWidth="146.0" />

             <Label layoutX="35.0" layoutY="299.0" text="备份命名规则" />
             <TextField fx:id="backupNameRuleTextField" layoutX="135.0" layoutY="289.0" prefHeight="40.0" prefWidth="146.0" />
             
             <Label layoutX="63.0" layoutY="351.0" text="备份路径" />
             <TextField fx:id="backupPathTextField" layoutX="135.0" layoutY="341.0" prefHeight="40.0" prefWidth="146.0" />

             <Button layoutX="475.0" layoutY="326.0" mnemonicParsing="false" onMouseClicked="#saveButtonOnMouseClickedAction" text="保存" />
            <Button layoutX="537.0" layoutY="326.0" mnemonicParsing="false" onMouseClicked="#cancelButtonOnMouseClickedAction" text="取消" />

         </children>
        </AnchorPane>
    </children>
</VBox>
